/[if IE 8] <html class="no-js lt-ie9" lang="en">
:plain
  <!--[if gt IE 8] -->
%html{lang: "en"}
  /<![endif]
  %head
    %meta{charset: "utf-8"}/
    / Set the viewport width to device width for mobile
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %title= data.page.title
    / Included CSS Files
    = stylesheet_link_tag "app", "theme", "ghfm", "fonts", "github", "webicons"
    = javascript_include_tag "foundation/modernizr.foundation"
    %link{rel: "alternate", type: "application/rss+xml", title: "RSS Feed", href: "feed.xml"}
  %body{class: page_classes}
    .top-bar
      %div.row
        %ul.title-area
          %li.name
            %h1
              %a{href: "/"} Justin Leveck
        %section.top-bar-section
          <!--Right Nav Section -->
          %ul.right
            / %li
            /   %a{href: "/"} Blog
            / %li
            /   = link_to 'About', '/about.html'


    .row.wrapper
      .nine.columns
        = yield
      / Application Javascript, safe to override
      = javascript_include_tag "app"
      .three.columns.bio
        %div.panel
          =image_tag 'me.jpg', class: 'avatar'
          %p
            My name is Justin. I am a Ruby Developer living in Orange County, CA.
          %div.webicons
            %a{href: 'https://twitter.com/justinleveck', class: 'webicon twitter medium', target: 'new'}
            %a{href: 'https://github.com/justinleveck', class: 'webicon github medium', target: 'new'}

  %div#copyright
    %div.row.full-width
      %div.large-4.columns
        %p Site content Â© 2013 Justin Leveck
      %div.large-8.columns
        %ul.inline-list.right
          %li